<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">         
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">   
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="@Url.Action("UserSearch", "Home")"><span class="glyphicon glyphicon-search"></span> Search</a></li>
                        <li>@Html.ActionLink("Log Out", "Logout", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Log In", "Login", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-2">
                <div class="navbar navbar-inverse">           
                    <ul class="nav nav-pills nav-stacked">
                        <li>@Html.ActionLink("Home", "", "")</li>
                        <li>@Html.ActionLink("Friends", "Friends", "Home")</li>
                        <li>@Html.ActionLink("Dialogs", "Dialogs", "Home")</li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Messages", "AllMessages", "Home")</li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
