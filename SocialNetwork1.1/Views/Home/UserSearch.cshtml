@model IEnumerable<SocialNetwork1._1.Models.ApplicationUser>

@{
    ViewBag.Title = "UserSearch";
}

<div class="row">
    <div class="col-md-9">
        @if (Model != null)
        {
            if (Model.Count() == 0)
            {
                <h4>Nothing found :(</h4>
            }
            else
            {
                @Html.Partial("~/Views/Partial/UserList.cshtml")
            }
        }
    </div>
    <div class="col-md-3">
        <aside>
            @using (Html.BeginForm("UserSearch", "Home", FormMethod.Post, new { role = "form", @class = "form" }))
            {
                @Html.AntiForgeryToken()
                <div>
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <input class="form-control" name="UserName" id="UsrName" placeholder="username">
                    </div>

                    <div class="form-group">
                        <input class="form-control" name="SurName" id="SurName" placeholder="surname">
                    </div>

                    <div class="form-group">
                        <input type="number" class="form-control" name="AgeMin" id="AgeMin" placeholder="age min">
                    </div>

                    <div class="form-group">
                        <input type="number" class="form-control" name="AgeMax" id="AgeMax" placeholder="age max">
                    </div>

                    <div class="form-group">
                        <div class="radio-inline"><input type="radio" name="Gender" id="Gender" value="Man">Man</div>
                        <div class="radio-inline"><input type="radio" name="Gender" id="Gender" value="Woman">Woman</div>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <button type="submit" class="btn btn-info btn-block">
                                    Search
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </aside>
    </div>
</div>
